@model DoctorFlow.Models.UserLoginModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="panel panel-info">
            <div class="form-horizontal">
                <div class="register-item">
                    <h4 style="font-family: arial">Bienvenido a Doctor Flow</h4>
                </div>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <div class="register-item">
                            @Html.LabelFor(model => model.EmailOrUserName)
                        </div>
                        <div class="register-item">
                            @Html.EditorFor(model => model.EmailOrUserName)
                            @Html.ValidationMessageFor(model => model.EmailOrUserName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="register-item">
                            @Html.LabelFor(model => model.Password)
                        </div>
                        <div class="register-item">
                            @Html.EditorFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>

                <div class="form-group">
                    <div class="register-item">
                        <input type="submit" value="Ingresar" class="btn btn-default" />
                    </div>
                </div>
                <div class="register-item">
                    <a href="@Url.Action("Index","PasswordRecovery")">Olvidaste tu contraseña?</a>
                    </div>
                </div>
        </div>
    </div>

}