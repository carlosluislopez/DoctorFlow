@model DoctorFlow.Models.UserLoginModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
    </div>
    <div class="col-md-12 col-md-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
        <div class="panel panel-info">

            <div class="form-horizontal">
                <h4 style="font-family: arial">Bienvenido a Doctor Flow</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.EmailOrUserName, new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmailOrUserName)
                        @Html.ValidationMessageFor(model => model.EmailOrUserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ingresar" class="btn btn-default" />
                    </div>
                </div> 
                <a href="@Url.Action("Index","PasswordRecovery")">Olvidaste tu contraseña?</a>
            </div>
        </div>
    </div>

}


