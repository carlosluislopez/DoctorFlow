@model DoctorFlow.Models.UserModels.UserPasswordResetModel
@{
    ViewBag.Title = "Restaurar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="font-family: helvetica">Restaurar Contraseña</h3>
<br/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        <div>
            @Html.EditorFor(model => model.Email)<br/>
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        @Html.LabelFor(model => model.PassKey)
        <div>
            @Html.EditorFor(model => model.PassKey)<br/>
            @Html.ValidationMessageFor(model => model.PassKey)
        </div>
        @Html.LabelFor(model => model.NewPassword)
        <div>
            @Html.EditorFor(model => model.NewPassword)<br/>
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>
        @Html.LabelFor(model => model.ConfirmNewPassword)
        <div>
            @Html.EditorFor(model => model.ConfirmNewPassword)<br/>
            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
        </div>
    </div>
    <div class="col-md-10">
        <input type="submit" value="Restaurar" class="btn btn-success" />
    </div>

}