<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Doctor Flow</title>
    <style type="text/css">.img-center {display: block; margin-left: auto ; margin-right: auto }</style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        $(function () { // will trigger when the document is ready
            $('.datepicker').datepicker(); //Initialise any date pickers
        });
    </script>
</head>
    <body>
        <a href="@Url.Action("Index","Home")"><img class="img-center" src="~/Content/Image/titlesplash.png" alt="Dr.Flow.png" /> </a>
        <div class="navbar navbar-inverse navbar">
            <div class="container">
                <div class="navbar-header">
                    
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink((Session["USERNAME"].ToString().IsEmpty()) ? "Ingresar" : Session["USERNAME"].ToString()
                                             ,(Session["USERNAME"].ToString().IsEmpty()) ? "Create" : "Details"
                                             , (Session["USERNAME"].ToString().IsEmpty()) ? "Login" : "Profile"
                                            )
                        </li>
                        <li>
                            @Html.ActionLink((Session["USERNAME"].ToString().IsEmpty()) ? "Registrarse" : "Cerrar Sesion"
                                              , (Session["USERNAME"].ToString().IsEmpty()) ? "Create" : "Logout"
                                              , (Session["USERNAME"].ToString().IsEmpty()) ? "Register" : "Login"
                                            )
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
        </div>

        <div class="container body-content">
            <br />
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Doctoru Furou</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
